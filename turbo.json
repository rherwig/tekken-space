{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [".env"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": [".next/**", "!.next/cache/**"]
        },
        "db:generate": {
            "cache": false
        },
        "db:migrate": {
            "cache": false,
            "dependsOn": ["db:generate"],
            "env": [
                "POSTGRES_HOST",
                "POSTGRES_PORT",
                "POSTGRES_USER",
                "POSTGRES_PASSWORD",
                "POSTGRES_DB"
            ],
            "inputs": ["$TURBO_DEFAULT$", ".env*"]
        },
        "lint": {},
        "lint:fix": {},
        "dev": {
            "cache": false,
            "persistent": true,
            "env": ["ORIGIN", "AUTH_GITHUB_ID", "AUTH_GITHUB_SECRET"]
        }
    }
}
